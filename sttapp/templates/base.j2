<!doctype html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/static/style.css">
    {% block head %}{% endblock %}
</head>

<body>
    {% block logged in%}
    <div>
        <a href="{{ url_for('explore') }}">Home</a>
        -
        <a href="{{ url_for('search') }}">Search</a>
        -
        <a href="{{ url_for('inventory_status') }}">Inventory Status</a>
        -
        <a href="{{ url_for('run_inventory') }}">Run Inventory</a>
    </div>
    <div>
        <h1>HD Recordings Speech-to-Text</h1>
    </div>

    {{ endblock }}
    <div id="content">{% block title %}{% endblock %}</div>
    <div id="content">{% block content %}{% endblock %}</div>
    <div id="flashes">
        {% with messages = get_flashed_messages() %}
        {% if messages %}
        <ul class=flashes>
            {% for message in messages %}
            <li>{{ message }}</li>
            {% endfor %}
        </ul>
        {% endif %}
        {% endwith %}
    </div>
</body>

</html>