{% extends "base.j2" %}

{% block content %}
	<title>Login | HD Recordings - IT Support Guys</title>

	<section class="min-h-screen flex justify-center items-center bg-gray-800">
		<section class="px-2 py-32 md:px-0">
			<div class="container items-center max-w-6xl px-8 mx-auto xl:px-5">
			<div class="flex flex-wrap items-center sm:-mx-3">
				<div class="w-full h-auto overflow-hidden rounded-md bg-indigo-100 shadow-xl sm:rounded-xl m-auto p-5">

					<!-- Header -->
					<header>
					<a href="https://itsupportguys.com/">
						<img class="w-20 mx-auto mb-5" src="https://itsupportguys.com/wp-content/uploads/2019/12/Logo.png" alt="IT Support Guys Logo">
					</a>
					<div class="text-black text-center font-semibold">
						<p>HD Audio Recordings | Login</p>
					</div>
					</header>

					<!-- Form -->
					<form method="POST" class="mx-auto">
						<div class="mb-5 mt-5">
						<label class="mb-1 font-semibold text-black block">
							Password
						</label>
						<input type="password" name="password"
							class="border-b-2 border-blue-700 mb-1 focus:border-blue-700 focus:outline-none focus:ring w-full px-4 py-3 rounded-lg shadow text-gray-600 font-medium">
						</div>

						<!-- Submit -->
						<button type="submit"
						class="mb-5 inline-flex justify-center text-white capitalize transition-colors duration-200 transform bg-indigo-700 rounded-md hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600 w-full p-2">
						Submit
						</button>
					</form>

					<!-- Form Footer: Copyright & Privacy Policy -->
					<div class="text-center text-gray-500">
					&copy; <script>document.write(new Date().getFullYear())</script> IT Support Guys | <a
						href="https://itsupportguys.com/privacy-policy/" target="_blank" class="underline">Privacy Policy</a>
					</div>
				</div>
				</div>
			</div>
			</div>
		</section>
	</section>
{% endblock %}